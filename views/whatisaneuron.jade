extends layout

block header_content
  link(rel='stylesheet', href='/stylesheets/whatisaneuron.css')

block content
  <!-- Information Panel -->
  // Modal
  #myModal.modal.fade(role='dialog', data-backdrop='false')
    .modal-dialog
      // Modal content
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal') Ã—
          h4.modal-title#info-header What is a neuron?
        .modal-body#info-text
          p Neurons are the building blocks of neural networks. This is a visualization is of a single neuron predicting a point is #[b(style="color:#E88923") orange] or #[b(style="color:#9F55E8") purple].
        .modal-footer
          button.btn.btn-success(type='button', data-dismiss='modal' id="whatisaneuron-action-button") Start training the neuron
  .row
    .col-sm-3
      button.btn.btn-info.btn-sm.pull-left(type='button', id='dialog-control', data-toggle='modal', data-target='#myModal', style = 'margin-top:16px; font-weight: bold') Close dialog
      #walkthru-control.pull-left
        i#walkthru-button.material-icons loop
    .col-sm-6
      #controls
        i#refresh-button.material-icons.player-icons replay
        i#play-button.material-icons.player-icons.icon-lrg play_arrow
        <!-- i#pause-button.material-icons.player-icons pause -->
        i#step-button.material-icons.player-icons skip_next
